int direction = 1;
task changeSetup()
{
	while(true){
		if (vexRT[Btn8U] == 1){ //if button 8U is pressed
			direction = -1 * direction; //changes vertical direction of the left analog channel
			waitUntil(vexRT[Btn8U] == 0); //waits for the button to be released to prevent constant switching of directions

		}
	}
}

task main(){
	startTask(changeSetup);// starts task

	while(true){
		motor[port1] = vexRT[Ch3] * direction; // motor gets
		delay(25);
	}
}
