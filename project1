void allMovForward (int speed, int time)
{
	motor[leftdrive1] = speed;
	motor[rightdrive2] = speed;
	motor[leftdrive1] = speed;
	motor[rightdrive2] = speed;

	wait1Msec(time);
}

void allMovBackward (int speed, int time)
{
	motor[leftdrive1] = speed;
	motor[rightdrive2] = speed;
	motor[leftdrive1] = speed;
	motor[rightdrive2] = speed;

	wait1Msec(time);
}

void turnPtRight (int speed, int time)
{
	motor[rightdrive1] = -speed;
	motor[rightdrive2] = -speed;
	motor[leftdrive1] = speed;
	motor[leftdrive2] = speed;
	wait1Msec(time);
}

void turnPtLeft (int speed, int time)
{
	motor[leftdrive1] = -speed;
	motor[leftdrive2] = -speed;
	motor[rightdrive1] = speed;
	motor[rightdrive2] = speed;
	wait1Msec(time);
}

void turnSwForward (int speed, int time, int direction)//turning robot foward with one drive fixed and the other drive forward
{
	if (direction == 1){ //moves right
		motor[leftdrive1] = speed;
		motor[leftdrive2] = speed;
		motor[rightdrive1] = 0;
		motor[rightdrive2] = 0;
		wait1Msec(time);
	}
	if (direction == 0){//moves left
		motor[rightdrive1] = speed;
		motor[rightdrive2] = speed;
		motor[leftdrive1] = 0;
		motor[leftdrive2] = 0;
		wait1Msec(time);
	}
}

void turnSwBackward (int speed, int time, int direction)//turning robot foward with one drive fixed and the other drive forward
{
	if (direction == 1){ //moves right
		motor[leftdrive1] = -speed;
		motor[leftdrive2] = -speed;
		motor[rightdrive1] = 0;
		motor[rightdrive2] = 0;
		wait1Msec(time);
	}
	if (direction == 0){//moves left
		motor[rightdrive1] = -speed;
		motor[rightdrive2] = -speed;
		motor[leftdrive1] = 0;
		motor[leftdrive2] = 0;
		wait1Msec(time);
	}
}
